extends layout

block content
	div#app
		input(
			type="text"
			v-model="keyword"
			@keyup.enter="search()"
		)
		img(
			:src="msg.pic"
		)
		div.test {{msg}}

	script.
		new Vue({ 
			el:'#app' , 
			data : { msg : '' , keyword: '' } ,
			methods : {
				get_imgs ( aid = '' ){
					axios.get( '/cover/img',
						{
							params : {
								aid : aid
							}
						}
					)
					.then( response => {
						this.msg = response.data.msg
						debugger
					})
					.catch( error => {})
				},
				search(){
					this.get_imgs( this.keyword )
				}
			},
			created (){
				this.get_imgs()
			}
		})
	
	
